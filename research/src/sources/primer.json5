{
  "$schema": "../schemas/design-system.schema.json5",
  "lastUpdated": "2019-11-22",
  "name": "Primer Design System",
  "description": "GitHub's design system",
  "url": "https://primer.style",
  "discipline": "development",
  "by": "GitHub",
  "components": [
    {
      "name": "Button",
      "definition": "Buttons are used for actions, like in forms, while textual hyperlinks are used for destinations, or moving from one page to another.",
      "url": "https://primer.style/css/components/buttons",
      "concepts": [
        {
          "name": "primary",
          "image": "primer-primary-button.png",
          "$comment": "For form actions and primary page actions."
        },
        {
          "name": "default",
          "image": "primer-default-button.png",
          "$comment": "Used to indicate the primary action on a page."
        },
        {
          "name": "small",
          "image": "primer-small-button.png",
          "$comment": "Used to indicate the primary action on a page."
        },
        {
          "name": "danger",
          "image": "primer-danger-button.png",
          "$comment": "They help reiterate that the intended action is important or potentially dangerous (e.g., deleting a repo or transferring ownership)."
        },
        {
          "name": "outline",
          "image": "primer-outline-button.png",
          "$comment": "Outline buttons downplay an action as they appear like boxy links."
        },
        {
          "name": "link",
          "image": "primer-link-button.png",
          "$comment": "Styled like a link, but uses a <button> element."
        },
        {
          "name": "group",
          "image": "primer-button-group.png",
          "$comment": "Groups of buttons."
        },
        {
          "name": "block",
          "image": "primer-block-button.png",
          "$comment": "Full width button."
        },
        {
          "name": "octicon",
          "openUIName": "icon",
          "image": "primer-octicon-button.png",
          "$comment": "Icon-only buttons that turn blue on hover."
        },
        {
          "name": "close",
          "image": "primer-close-button.png",
          "$comment": "Icon-only buttons that turn blue on hover."
        },
        {
          "name": "count",
          "image": "primer-count-button.png",
          "$comment": "You can easily append a count to a small button."
        },
        {
          "name": "counter",
          "image": "primer-counter-button.png",
          "$comment": "You can also use the counter component within buttons."
        },
        {
          "name": "large",
          "image": "primer-large-button.png",
          "$comment": "Large variant of button."
        },
        {
          "name": "disabled",
          "image": "primer-disabled-button.png",
          "$comment": "Disabled state of button."
        },
        {
          "name": "invisible",
          "image": "primer-invisible-button.png",
          "$comment": "When you want a link, but you want it padded and line heighted like a button best for cancel actions on forms."
        },
        {
          "name": "hidden",
          "image": "primer-hidden-button.png",
          "$comment": "Use .hidden-text-expander to indicate and toggle hidden text."
        }
      ]
    }
  ]
}
